{
  "name": "revelo-api",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev:api": "nodemon api/index",
    "dev:client": "cd client && pnpm run dev",
    "dev": "concurrently -n \"Vue,Node\" -c \"#41b883,#00a0df\" \"pnpm run dev:client\" \"pnpm run dev:api\"",
    "install:api": "pnpm install --ignore-scripts",
    "install:client": "cd client && pnpm install --ignore-scripts",
    "install": "pnpm run install:api; pnpm run install:client",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node api/drizzle/migrate.js",
    "db:drop": "npx drizzle-kit drop",
    "lint:api": "eslint . --fix",
    "lint:client": "cd client && pnpm run lint",
    "format:api": "prettier --write .",
    "format:client": "cd client && pnpm run format",
    "style": "concurrently -n \"Vue,Node\" -c \"#41b883,#00a0df\" \"pnpm run format:client ; pnpm run lint:client\" \"pnpm run format:api ; pnpm run lint:api\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "drizzle-orm": "^0.44.2",
    "exifr": "^7.1.3",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "2.0.1",
    "nodemailer": "^7.0.4",
    "pg": "^8.16.2",
    "postgres": "^3.4.7",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1"
  }
}
